#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int  factRecursion(int n);

int main(int argc,char *argv[]){
char respuesta;
do{

	 printf(".............Factorial con Recursion 1 ..............\n");
		int i,n;
 	  char *num=argv[1];
 	 fprintf(stdout,"arg[1]=%s\n",argv[1]);
 	 for(i=0;i<strlen(argv[1]);i++){
 	 	fprintf(stdout,"num[%d]=%c\n",i,num[i]);
	  }
	 
	n = atoi(argv[1]);
	 printf("Factorial: %d\n",factRecursion( n));
	 
	 
	 printf("Deseas repetir(s/n)\n");
	 scanf(" %c",&respuesta);
}	while(respuesta=='S'|| respuesta =='s');


}

int factRecursion(int n){
	 
	 if(n<0){
	 
	 	return 0;
	 }else if( n == 0){
	 	return 1;
	 }else if(n ==1){
	 	return 1;
	 }else{
	 	 return n *factRecursion(n -1);
	 }
}
